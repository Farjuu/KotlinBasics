<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="9"
    android:background="@color/cardview_dark_background"
    tools:context=".activities.BirthDayCard">

    <TextView
        android:id="@+id/wishText"
        android:layout_width="371dp"
        android:layout_height="154dp"
        android:fontFamily="@font/fredoka_one"
        android:keepScreenOn="true"
        android:text="@string/wishes"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cakeImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cakeImage"
        android:layout_width="314dp"
        android:layout_height="400dp"
        android:contentDescription="@string/birthdaycard"
        android:src="@drawable/caketransparent"
        app:layout_constraintBottom_toTopOf="@+id/senderText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wishText" />

    <TextView
        android:id="@+id/senderText"
        android:layout_width="224dp"
        android:layout_height="82dp"
        android:text="@string/sender"
        android:textColor="#DD7352"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cakeImage"
        app:layout_constraintVertical_bias="0.954" />


</androidx.constraintlayout.widget.ConstraintLayout>